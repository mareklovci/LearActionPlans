<Window x:Class="LearActionPlans.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearActionPlans.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" Grid.Column="0" Name="btnNewActionPlan" Click="BtnNewActionPlan_Click" Padding="20">
            Create New Action Plan
        </Button>

        <Button Grid.Row="0" Grid.Column="1" Name="btnFilter" Click="BtnFilter_Click" Padding="20" Margin="20 0 0 0">
            All Action Plans
        </Button>
        
        <Button Grid.Row="0" Grid.Column="2" Name="btnEditable" Click="BtnEditable_Click" Padding="20" Margin="20 0 0 0">
            Editable Action Plans
        </Button>
    </Grid>
</Window>
